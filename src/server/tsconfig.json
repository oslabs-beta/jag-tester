{
    "compilerOptions": {
        "rootDir": ".",
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": true,
        "strict": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "../../dist/server",
        "composite": true,
        "baseUrl": ".",
        "paths": {
            "*": ["../../node_modules/*"]
        },
        "types": [
            "node"
        ]
    },
    "include": ["./**/*"]
}
