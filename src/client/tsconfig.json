{
	"compilerOptions": {
		"rootDir": ".",
		"lib": ["dom", "dom.iterable", "esnext", "webworker", "es6", "scripthost"],
		"allowJs": true,
		"outDir": "../../dist/client",
		"allowSyntheticDefaultImports": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"jsx": "react",
		"paths": {
			"*": ["../../node_modules/*"]
		}
	},
	"include": ["./**/*", "../custom.d.ts"]
}
